###########
# General #
###########

# Set the mod key. This key is used to interact with i3 
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font is used in the bar {} block below.
font pango:FontAwesome, iosevka-term-ss04-medium 18

# Constrain the size of floating windows
# format: <variable> <width> x <height>
floating_minimum_size 600 x 500
floating_maximum_size 900 x 800

###########
# i3-Gaps #
###########

# Default gaps between windows
#smart_gaps on
gaps inner 7
gaps outer 7

# Border size 
for_window [class="^.*"] border pixel 2

# Hide edge borders
# hide_edge_borders none|vertical|horizontal|both|smart
hide_edge_borders smart

#############
# Variables #
#############

set $browser firefox
set $browserClass "Firefox"

set $fileManager nemo
set $fileManagerClass "Nemo"

set $musicPlayer quodlibet
set $musicPlayerClass "Quodlibet"

set $emailClient thunderbird
set $emailClientClass "Thunderbird"

set $taskManager xfce4-taskmanager

set $terminal termite
set $terminalClass "Termite"

# Colors
## Base16 Eighties
## Author: Chris Kempson (http://chriskempson.com)

set $base00 #3b3b3b 
# dark grey (background)

set $base01 #494949 
# light grey (current line)

set $base02 #646464 
# light light grey (selection)

set $base03 #a9a9a9 
# silver (comment)

set $base04 #CCCCCC 
# white (foreground)

set $base05 #f78d8c 
# red

set $base06 #fca369 
# orange

set $base07 #ffd479 
# yellow

set $base08 #99cc99 
# green

set $base09 #76d4d6 
# aqua

set $base0A #78aad6 
# blue

set $base0B #d6acd6 
# purple

